@model TestFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input class="form-control" asp-for="@Model.Name">
        <span asp-validation-for="@Model.Name" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.StartDate"></label>
        <input class="form-control" asp-for="@Model.StartDate">
        <span asp-validation-for="@Model.StartDate" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.EndDate"></label>
        <input class="form-control" asp-for="@Model.EndDate">
        <span asp-validation-for="@Model.EndDate" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Duration"></label>
        <input class="form-control" asp-for="@Model.Duration">
        <span asp-validation-for="@Model.Duration" class="small text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>