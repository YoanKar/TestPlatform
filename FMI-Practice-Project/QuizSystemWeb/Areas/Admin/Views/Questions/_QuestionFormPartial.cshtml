@model QuestionFormModel


<form method="post">
    <input type="hidden" id="testId" name="testId" value=@Model.TestId>
    <div class="form-group">
        <label asp-for="@Model.Content"></label>
        <input class="form-control" asp-for="@Model.Content">
        <span asp-validation-for="@Model.Content" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Points"></label>
        <input class="form-control" asp-for="@Model.Points">
        <span asp-validation-for="@Model.Points" class="small text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.QuestionType">Type select</label>
        <select asp-for="@Model.QuestionType" class="form-control">
            <option value="">--Select--</option>
            @foreach (var type in Model.TypesList)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.QuestionType" class="small text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>